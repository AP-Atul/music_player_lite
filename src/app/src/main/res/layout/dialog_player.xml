<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/album_art_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/album_art"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_album_art" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_art_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/current_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@color/material_on_background_emphasis_medium"
            android:textSize="@dimen/text_medium" />

        <SeekBar
            android:id="@+id/song_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:progress="50"
            app:indicatorColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/total_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@color/material_on_background_emphasis_medium"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/songs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_layout"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/song_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@color/material_on_background_emphasis_medium"
            android:textSize="@dimen/text_big_med" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/songs_layout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/control_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_controls_repeat"
            app:tint="?attr/colorOnBackground" />

        <ImageView
            android:id="@+id/control_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_controls_prev"
            app:tint="?attr/colorOnBackground" />

        <ImageView
            android:id="@+id/control_play_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_controls_play"
            app:tint="?attr/colorOnBackground" />

        <ImageView
            android:id="@+id/control_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_controls_next"
            app:tint="?attr/colorOnBackground" />

        <ImageView
            android:id="@+id/control_shuffle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_controls_shuffle"
            app:tint="?attr/colorOnBackground" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/controls_layout"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/music_bitrate_freq"
        android:textAlignment="center"
        android:textColor="@color/material_on_background_disabled"
        android:textSize="@dimen/text_medium" />

</RelativeLayout>